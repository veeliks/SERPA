{
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!!**/dist"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},

	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},

	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},

	"$schema": "https://biomejs.dev/schemas/latest/schema.json"
}
